<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Stack with Array Visualization -->
    <com.example.algoflow.algorithm_views.StackWithArrayView
        android:id="@+id/stackWithArrayView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Input and Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- push value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/valueInput"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Giá trị"
                android:inputType="number" />

            <Button
                android:id="@+id/pushButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push" />

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/popButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pop" />

            <Button
                android:id="@+id/peekButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peek" />

            <Button
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>